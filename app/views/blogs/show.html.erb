<p id="notice"><%= notice %></p>
<div class="container">
  <%= link_to 'Back', blogs_path, class: 'btn btn-info my-4' %>
<div class="card" style="width: 18rem;">
  <%= image_tag @blog.image, class: 'img-responsive', height: '300px' %>
  <div class="card-body">
    <h5 class="card-title"><%= @blog.title%></h5>
    <p class="card-text"><%= @blog.body%></p>
  </div>
  <%= link_to 'Add Comment', new_comment_path, class: 'nav-link' %>


  <!-- IF USER IS LOGGED IN, THEIR BLOG WILL SHOW OTHERWISE IT WONT -->
  <% if user_signed_in? && @blog.user.id == current_user.id %>
  <div class="card-footer">
    <%= link_to 'Edit', edit_blog_path(@blog) %> |
    <%= link_to 'Destroy', @blog, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
  <% end %>
</div>
</div>

<%= link_to 'Edit', edit_blog_path(@blog) %> |
<%= link_to 'Back', blogs_path %>






<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Blog</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blog.comments.each do |comment| %>
      <tr>
        <td><%= comment.user.first_name%></td>
        <td><%= comment.blog.title %></td>
        <td><%= comment.body %></td>
          <td><%= link_to 'Show', comment %></td>
          <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
          <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>
